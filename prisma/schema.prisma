datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  role      String     @default("USER")
  name      String?
  cartItems CartItem[]
  products  Product[] @relation("UserProducts") // ðŸ”¹ Added explicit relation
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  userId      String?  // ðŸ”¹ Make `userId` optional for now
  user        User?    @relation(fields: [userId], references: [id], name: "UserProducts")
  cartItems   CartItem[]
}

model CartItem {
  id        String @id @default(uuid())
  userId    String
  productId String
  quantity  Int    @default(1)

  color String?
  size  String?
  notes String?

  // Relations
  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
