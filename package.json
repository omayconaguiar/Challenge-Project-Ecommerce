{
  "name": "challenge-project-ecommerce",
  "version": "1.0.0",
  "description": "Express + Prisma + PostgreSQL Backend",
  "scripts": {
    "start": "ts-node src/main.ts",
    "start:dev": "nodemon --watch src --exec ts-node src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "prisma:seed": "ts-node prisma/seed.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start:prod": "node dist/main.js",
    "test": "jest --config jest.config.json",
    "test:unit": "jest --config jest.unit.json",
    "test:integration": "jest --config jest.integration.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prisma:migrate": "npx prisma migrate dev --name init",
    "prisma:deploy": "npx prisma migrate deploy",
    "prisma:reset": "npx prisma migrate reset --force",
    "prisma:generate": "npx prisma generate"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.11",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.11",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.11",
    "@nestjs/swagger": "^11.0.6",
    "@nestjs/testing": "^11.0.11",
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.1",
    "chokidar": "^4.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "helmet": "^6.0.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^5.0.0",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
